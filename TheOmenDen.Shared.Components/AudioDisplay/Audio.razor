<audio id="audio" autoplay="@Autoplay" muted="@Muted">
    @foreach (var audioSource in Song.MusicUris)
    {
        <source src="@audioSource">
    }
    Your browser does not support the audio element.
</audio>
<div class="audio-player responsive shadow">
    <div class="cover-art">
        <image src="@Source.Album.ArtworkUri"
               alt="@Source.Album.Name" 
               loading="lazy"/>
    </div>
    <div class="info responsive">
        <h2>@Source.Artist.Name</h2>
        <h3>
            @Source.Song.Name
            <span>
                (<a href="@Source.Song.InformationUri" target="_blank">Check it out here!</a>
                )
            </span>
        </h3>
        <div class="progressbar_slide shadow">
            <div class="progressbar_range progress-range-striped progress-range-animated" aria-valuenow="0"
                 aria-valuemin="0" aria-valuemax="100" style="width: 50%;">
                <small id="timeleft" class="progress-text">00:00</small>
                <span class="visually-hidden">00:00</span>
            </div>
        </div>
    </div>
    <div class="controls responsive shadow">
        <div class="controls_plays btn-toolbar">
            <button role="button" type="button" class="button button-purple-shadow">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-caret-left-square"
                     viewBox="0 0 16 16" id="prev_btn">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path d="M10.205 12.456A.5.5 0 0 0 10.5 12V4a.5.5 0 0 0-.832-.374l-4.5 4a.5.5 0 0 0 0 .748l4.5 4a.5.5 0 0 0 .537.082z" />
                </svg>
                <span class="visually-hidden">Rewind</span>
            </button>
            <button role="button" type="button" class="button button-purple-shadow">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-play-circle"
                     viewBox="0 0 16 16" id="plays_btn">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                    <path d="M6.271 5.055a.5.5 0 0 1 .52.038l3.5 2.5a.5.5 0 0 1 0 .814l-3.5 2.5A.5.5 0 0 1 6 10.5v-5a.5.5 0 0 1 .271-.445z" />
                </svg>
                <span class="visually-hidden">Play</span>
            </button>
            <button role="button" type="button" class="button button-purple-shadow">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-caret-right-square"
                     viewBox="0 0 16 16" id="next_btn">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path d="M5.795 12.456A.5.5 0 0 1 5.5 12V4a.5.5 0 0 1 .832-.374l4.5 4a.5.5 0 0 1 0 .748l-4.5 4a.5.5 0 0 1-.537.082z" />
                </svg>
                <span class="visually-hidden">Forward</span>
            </button>
        </div>
        <div class="controls_player btn-toolbar">
            <button role="button" type="button" class="button button-green-shadow">
                <svg xmlns="http://www.w3.org/2000/svg" id="volume_btn" fill="currentColor" class="bi bi-volume-off"
                     viewBox="0 0 16 16">
                    <path d="M10.717 3.55A.5.5 0 0 1 11 4v8a.5.5 0 0 1-.812.39L7.825 10.5H5.5A.5.5 0 0 1 5 10V6a.5.5 0 0 1 .5-.5h2.325l2.363-1.89a.5.5 0 0 1 .529-.06zM10 5.04 8.312 6.39A.5.5 0 0 1 8 6.5H6v3h2a.5.5 0 0 1 .312.11L10 10.96V5.04z" />
                </svg>
                <span class="visually-hidden">Volume Adjustment</span>
            </button>
            <button role="button" type="button" class="button button-green-shadow">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-shuffle"
                     viewBox="0 0 23 23" id="shuffle_btn">
                    <path fill-rule="evenodd"
                          d="M0 3.5A.5.5 0 0 1 .5 3H1c2.202 0 3.827 1.24 4.874 2.418.49.552.865 1.102 1.126 1.532.26-.43.636-.98 1.126-1.532C9.173 4.24 10.798 3 13 3v1c-1.798 0-3.173 1.01-4.126 2.082A9.624 9.624 0 0 0 7.556 8a9.624 9.624 0 0 0 1.317 1.918C9.828 10.99 11.204 12 13 12v1c-2.202 0-3.827-1.24-4.874-2.418A10.595 10.595 0 0 1 7 9.05c-.26.43-.636.98-1.126 1.532C4.827 11.76 3.202 13 1 13H.5a.5.5 0 0 1 0-1H1c1.798 0 3.173-1.01 4.126-2.082A9.624 9.624 0 0 0 6.444 8a9.624 9.624 0 0 0-1.317-1.918C4.172 5.01 2.796 4 1 4H.5a.5.5 0 0 1-.5-.5z" />
                    <path d="M13 5.466V1.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384l-2.36 1.966a.25.25 0 0 1-.41-.192zm0 9v-3.932a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384l-2.36 1.966a.25.25 0 0 1-.41-.192z" />
                </svg>
                <span class="visually-hidden">Shuffle</span>
            </button>
            <button role="button" type="button" class="button button-green-shadow">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-music-note-list"
                     id="playlist_btn" viewBox="0 0 23 23">
                    <path d="M12 13c0 1.105-1.12 2-2.5 2S7 14.105 7 13s1.12-2 2.5-2 2.5.895 2.5 2z" />
                    <path fill-rule="evenodd" d="M12 3v10h-1V3h1z" />
                    <path d="M11 2.82a1 1 0 0 1 .804-.98l3-.6A1 1 0 0 1 16 2.22V4l-5 1V2.82z" />
                    <path fill-rule="evenodd"
                          d="M0 11.5a.5.5 0 0 1 .5-.5H4a.5.5 0 0 1 0 1H.5a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 .5 7H8a.5.5 0 0 1 0 1H.5a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 .5 3H8a.5.5 0 0 1 0 1H.5a.5.5 0 0 1-.5-.5z" />
                </svg>
                <span class="visually-hidden">View Playlist</span>
            </button>
        </div>
    </div>
</div>
